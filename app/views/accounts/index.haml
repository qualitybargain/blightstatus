.container.about-page-content.no-search-results
  
  .span12
    .span8{:style => "margin-left: 0"}
      .notice
        %h1
          My Watchlist
    .span4

  .row.span8
    .block
      #subscriptions
        -if @account_subcriptions.count > 0
          -@account_subcriptions.each do |address|
            .subscription{:id => "subscription-#{address.id}" }
              %h2.address-title
                =address.address_long


              -address.sorted_cases.each do |c|
                .progress-bar
                  %h3
                    Case:
                    =c.case_number
                  =render :partial => "addresses/progress-bar", :locals => {:kase => c}
                  -if c.case_data_error?
                    .block{:style => "text-align: center; padding: 0 0 10px; margin:0 auto;"}
                      %b{:style => "color: red"}
                        Warning:
                      This case is missing data.

              .clearfix
              %br
              .subscribe
                =link_to('Remove Watchlist', "/subscriptions/#{address.id}", :remote => true, :method => :delete, 'data-type' => 'json', :class => 'btn btn-primary btn-tight subscribe-button' , :id => "subscribe-button")
              .view-property
                =link_to address do
                  .btn.btn-primary.btn-tight
                    View Property
            .clearfix

  .row.span3
    .map#map{:style => "width: 300px; height: 200px"}
    .email-notification
      .btn-group
        %input#email-notification-toggle{:name => "email-notification-toggle" , :type => "checkbox", :value => "true"}
        %label.btn.btn-primary{:for => "email-notification-toggle"} Receive Emails


