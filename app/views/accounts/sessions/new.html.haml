.container
  / .row
  %ul.nav.nav-tabs.account-tabs
    %li
      =link_to "Need an account? SIGN UP", new_account_registration_path
    %li.active
      =link_to "Have an account? LOG IN", "#"
  .tab-content.tab-pane-content
    .span8
      %h2 Welcome back! Log in to manage your account.
    .span4
      =form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        = devise_error_messages!
        %div
          = f.label :email
          = f.email_field :email
        %div
          = f.label :password
          = f.password_field :password
          %br
          = link_to "Forgot your password?", new_password_path(resource_name)
        - if devise_mapping.rememberable?
          %div.rememberable
            = f.check_box :remember_me
            = f.label :remember_me
        %div= f.submit "Log in", :class => 'btn btn-primary'
      %div
        Don't have an account yet?
        =link_to " Create one", new_account_registration_path
